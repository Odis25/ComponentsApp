                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Margin="0,0,0,10" HorizontalAlignment="Center" Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" FontWeight="Bold" Text="ВГПП ПНГ Сепарация УВКС Е-1/1,2"></TextBlock>
