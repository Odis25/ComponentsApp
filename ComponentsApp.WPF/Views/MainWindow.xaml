                                                <TextBox KeyDown="TextBox_KeyDown" PreviewTextInput="TextBox_PreviewTextInput" Grid.Row="12" Grid.Column="1" Style="{StaticResource MaterialDesignTextBoxBase}" FontWeight="Medium" HorizontalAlignment="Left" Margin="10,5,10,0" Text="{Binding C6H14, StringFormat= '\{0:f5\}'}"></TextBox>
                                                <TextBox KeyDown="TextBox_KeyDown" PreviewTextInput="TextBox_PreviewTextInput" Grid.Row="14" Grid.Column="1" Style="{StaticResource MaterialDesignTextBoxBase}" FontWeight="Medium" HorizontalAlignment="Left" Margin="10,5,10,0" Text="{Binding Density, StringFormat= '\{0:f5\}'}"></TextBox>
                                            </Grid>
                                        </StackPanel>
                                    </materialDesign:Card>
